<Window x:Class="Arkanoid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arkanoid" 
        xmlns:viewmodel="clr-namespace:Arkanoid.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Keyboard.KeyDown="keyDownEventHandler">
    
    <Window.Resources>
        <viewmodel:ArkanoidViewModel x:Key="viewModel"/>
    </Window.Resources>


    <StackPanel DataContext="{StaticResource viewModel}">
        <Image Source="{Binding DisplayedImage, Converter={StaticResource viewModel}}" Height="100" Width="100"/>
    </StackPanel>
</Window>
