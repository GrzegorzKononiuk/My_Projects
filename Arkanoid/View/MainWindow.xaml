<Window x:Class="Arkanoid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arkanoid" 
        xmlns:viewmodel="clr-namespace:Arkanoid.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FocusManager.FocusedElement="{Binding ElementName=MyCanvas}">

    <Window.Resources>
        <viewmodel:ConvertImage x:Key="convertImage"/>
        <viewmodel:ArkanoidViewModel x:Key="arkanoidViewModel"/>
    </Window.Resources>

    <Canvas Name="MyCanvas" KeyDown="Canvas_KeyDown" Focusable="True" DataContext="{StaticResource convertImage}">

        <Image Name="PlankImg" 
                Source="{Binding DisplayedImage, Converter={StaticResource convertImage}}"  
                Canvas.Left="10" 
                Canvas.Top="10" 
                HorizontalAlignment="Center" 
                Height="64" 
                Margin="0" 
                VerticalAlignment="Top" 
                Width="64"/>

        <Label x:Name="MyLabel"
               DataContext="{StaticResource arkanoidViewModel}"
               Content="{Binding Number}" 
               ContentStringFormat="Clicked Arrows {0} times."
               FontSize="22"/>
        
        <Button Content="SAVE DATA" Canvas.Left="503" Canvas.Top="305" Width="75" Click="Button_Click"/>
    </Canvas>
</Window>
