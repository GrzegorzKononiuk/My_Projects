<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
	android:background="@drawable/backgroundx"
	android:layout_width="match_parent"
    android:layout_height="match_parent">
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="200dp">
		
	<EditText
		android:id="@+id/cityNameText"
		android:layout_width="232dp"
		android:layout_height="80dp"
		android:layout_marginLeft="50dp"
		android:layout_marginRight="50dp"
		android:layout_centerHorizontal="true"
		android:textColor="@android:color/white"
		android:hint="Enter City"
		android:gravity="center"/>
			
	<Button
		android:id="@+id/getWeatherButton"
		android:layout_width="200dp"
		android:layout_height="30dp"
		android:layout_marginTop="10dp"
		android:layout_centerHorizontal="true"
		android:background="?android:attr/colorAccent"
		android:text="Check Weather"
		android:layout_below="@id/cityNameText"/>
		
			
	</RelativeLayout>
		
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.8">
		
		<ImageView
		android:id="@+id/thermometerImage"
		android:src="@drawable/thermometer"
		android:layout_width="70dp"
		android:layout_height="70dp"/>
		
		<TextView
			android:id="@+id/temperatureTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="33"
		android:textColor="@android:color/white"
		android:textSize="44sp"
		android:textStyle="bold"
		android:layout_toRightOf="@id/thermometerImage"/>
		
		<TextView
		android:id="@+id/weatherDescriptionText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		android:text="Shower Rain"
		android:textColor="@android:color/white"
		android:textStyle="bold"
		android:textSize="44sp"
		android:layout_below="@id/thermometerImage"/>
		
		<TextView
		android:id="@+id/placeText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Lagos, NG"
		android:textColor="@android:color/white"
		android:textSize="44sp"
		android:layout_below="@+id/weatherDescriptionText"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="10dp"
		android:textStyle="bold"/>
	
	</RelativeLayout>
					  
</LinearLayout>